        <b>at - 1
        ====
        prev
        ----
        next
        ----
        data
    ]
    card current2 [
        <b>at
        ====
        prev
        ----
        next
        ----
        data
    ]
    card next2 [
        <b>at + 1
        ====
        prev
        ----
        next
        ----
        data
    ]
    prev2 <-r- current2
    current2 <-r-> next2
    prev2 -> next2 #line:green;line.bold
}

