@startuml

frame "1" as first {
    card prev1 [
        <b>at - 1
        ====
        prev
        ----
        next
        ----
        data
    ]
    card current1 [
        <b>at
        ====
        prev
        ----
        next
        ----
        data
    ]
    card next1 [
        <b>at + 1
        ====
        prev
        ----
        next
        ----
        data
    ]
    prev1 <-r-> current1
    current1 <-r-> next1
}

frame "2" as second {
